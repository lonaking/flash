<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.flash.domain.ProductGroup" table="product_group" dynamic-update="true">
		<id name="id" column="group_id">
			<generator class="native"></generator>
		</id>
		<!-- 分组名 -->
		<property name="name" column="group_name" length="10"></property>
		<!-- 上级id -->
		<property name="parentId" column="parent_id"></property>
		<!-- 所属店铺 -->
		<many-to-one name="shop" class="com.flash.domain.Shop" column="group_shop_id" fetch="join"></many-to-one>
		<!-- 商品 -->
		<set name="products" order-by="id" cascade="none" inverse="true" lazy="true">
			<key>
				<column name="product_group_id"></column>
			</key>
			<one-to-many class="com.flash.domain.Product"/>
		</set>
	</class>
</hibernate-mapping>